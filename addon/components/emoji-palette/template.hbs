<div class="emojidex-palette-wrapper">
  {{#if searchEnabled}}
    <div class="emojidex-search-container">
      {{input class=(concat "emojidex-searchbox " inputClasses) type="text" value=searchTerm placeholder=searchPlaceholder}}
    </div>
  {{/if}}
  {{emoji-list
      class=(unless searchEnabled "emojidex-top-component")
      isCompleteList=isCompleteList
      listType=currentListType
      categories=allowedCategories
      categoryNames=categoryNames
      emojiList=emojiList
      selectEmoji=(action "selectEmoji")
  }}
  {{#unless hideCategories}}
    <div class="emojidex-horizontal-ruler"></div>
    <div class="emojidex-category-holder emojidex-bottom-component">
      {{#each allowedCategories as |category|}}
        <img role="button" src={{get categorySVG category}} alt={{category}} class="emojidex-category-icon category-icon-{{category}}" {{action "changeCategory" category}}>
      {{/each}}
    </div>
  {{/unless}}
</div>
