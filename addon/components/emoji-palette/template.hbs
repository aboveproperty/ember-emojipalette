<div class="emojidex-palette-wrapper">
  {{!-- {{#if searchEnabled}}
    <div class="emojidex-search-container">
      {{input type="search" value=searchTerm class="emojidex-searchbox emojidex-top-component" placeholder=searchPlaceholder key-up=(action "searchEmojis")}}
    </div>
  {{/if}} --}}
  {{emoji-list  
      isCompleteList=isCompleteList
      listType=currentListType
      categories=allowedCategories
      categoryNames=categoryNames
      emojiList=emojiList 
      selectEmoji=(action "selectEmoji")}}
  {{#unless hideCategories}}
    <div class="emojidex-horizontal-ruler"></div>
    <div class="emojidex-category-holder emojidex-bottom-component">
      {{#each allowedCategories as |category|}}
        <img src="{{get categorySVG category}}" class="emojidex-category-icon category-icon-{{category}}" {{action "changeCategory" category}}/>
      {{/each}}
    </div>
  {{/unless}}
</div>
